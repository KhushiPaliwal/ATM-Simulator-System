package org.example;

import java.awt.Color;
import java.awt.Font;
import java.awt.Image;
import java.awt.LayoutManager;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class Transactions extends JFrame implements ActionListener {
    JButton deposit;
    JButton withdrawl;
    JButton pinchange;
    JButton fastcash;
    JButton balanceenquiry;
    JButton ministatement;
    JButton exit;
    String pinnumber;

    Transactions(String pinnumber) {
        this.pinnumber = pinnumber;
        this.setLayout((LayoutManager)null);
        ImageIcon i1 = new ImageIcon(ClassLoader.getSystemResource("icons/atm.jpg"));
        Image i2 = i1.getImage().getScaledInstance(900, 900, 1);
        ImageIcon i3 = new ImageIcon(i2);
        JLabel image = new JLabel(i3);
        image.setBounds(0, 0, 900, 900);
        this.add(image);
        JLabel text = new JLabel("Please select your Transactions");
        text.setForeground(Color.WHITE);
        text.setFont(new Font("System", 1, 16));
        text.setBounds(210, 300, 700, 35);
        image.add(text);
        this.deposit = new JButton("Deposit");
        this.deposit.setBounds(170, 415, 150, 30);
        this.deposit.addActionListener(this);
        image.add(this.deposit);
        this.withdrawl = new JButton("Cash WithDrawl");
        this.withdrawl.setBounds(355, 415, 150, 30);
        this.withdrawl.addActionListener(this);
        image.add(this.withdrawl);
        this.fastcash = new JButton("Fast Cash");
        this.fastcash.setBounds(170, 450, 150, 30);
        this.fastcash.addActionListener(this);
        image.add(this.fastcash);
        this.ministatement = new JButton("Mini Statement");
        this.ministatement.setBounds(355, 450, 150, 30);
        this.ministatement.addActionListener(this);
        image.add(this.ministatement);
        this.pinchange = new JButton("Pin Change");
        this.pinchange.setBounds(170, 485, 150, 30);
        this.pinchange.addActionListener(this);
        image.add(this.pinchange);
        this.balanceenquiry = new JButton("Balance Enquiry");
        this.balanceenquiry.setBounds(355, 485, 150, 30);
        this.balanceenquiry.addActionListener(this);
        image.add(this.balanceenquiry);
        this.exit = new JButton("Exit");
        this.exit.setBounds(355, 520, 150, 30);
        this.exit.addActionListener(this);
        image.add(this.exit);
        this.setSize(900, 900);
        this.setLocation(300, 0);
        this.setUndecorated(true);
        this.setVisible(true);
    }

    public void actionPerformed(ActionEvent ae) {
        if (ae.getSource() == this.exit) {
            System.exit(0);
        } else if (ae.getSource() == this.deposit) {
            this.setVisible(false);
            (new Deposit(this.pinnumber)).setVisible(true);
        } else if (ae.getSource() == this.withdrawl) {
            this.setVisible(false);
            (new Withdrawl(this.pinnumber)).setVisible(true);
        } else if (ae.getSource() == this.fastcash) {
            this.setVisible(false);
            (new FastCash(this.pinnumber)).setVisible(true);
        } else if (ae.getSource() == this.pinchange) {
            this.setVisible(false);
            (new PinChange(this.pinnumber)).setVisible(true);
        } else if (ae.getSource() == this.balanceenquiry) {
            this.setVisible(false);
            (new BalanceEnquiry(this.pinnumber)).setVisible(true);
        } else if (ae.getSource() == this.ministatement) {
            this.setVisible(false);
            (new MiniStatement(this.pinnumber)).setVisible(true);
        }

    }

    public static void main(String[] args) {
        new Transactions("");
    }
}
